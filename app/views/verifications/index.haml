]
- @ads.each do |ad|
  #name
    %b= link_to "#{ad.name}", verifications_path(:scope => "ads_by_user", :email => ad.email)
  #email  
    %i= ad.email
  #ad_title
    = ad.title
  #ad_content
    = ad.ad_content
    = link_to "Weryfikuj", verify_verification_path(ad), :method => :put 
    |
    = link_to "Odrzuć", discard_info_verification_path(ad), :method => :put
    |
    = link_to "Edit", edit_ad_path(ad)
  %br
