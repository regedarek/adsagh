#title
  %h1
    = @ad.title
#ad_content
  %b Treść ogłoszenia:
  = @ad.ad_content
%br
#name
  %b Imię i nazwisko:
  = @ad.name
%br
#email
  %b Email:
  = @ad.email
%br
#price
  %b Cena:
  = @ad.price

%br
- if @ad.photos.present?
  - @ad.photos.each do |p|
    #photos
      = link_to image_tag(p.photo.url(:thumb)), p.photo.url(:original)
  %b Liczba wyświetleń:
  = @ad.display_counter
%br
- if current_adv or logged_in?
  = link_to "Zakończ", finish_ad_path(@ad), :method => :put
  |
= link_to "wróć", ads_path
