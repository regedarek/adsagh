<%= nested_form_for @ad, :html=>{:multipart => true } do |f| %>
  <%= f.error_messages %>
  <p>
  <%= f.label :title %><br />
  <%= f.text_field :title %>
  </p>
  <%= f.fields_for :photos do |attachment_form|  %>
    <p>
    <%= attachment_form.label :file %><br />
    <%= attachment_form.file_field :file %>
    </p>
    <%= attachment_form.link_to_remove "Remove this attachment" %>
  <% end %>
  <%= f.link_to_add "Add attachment", :photos %>
  <p><%= f.submit %></p>
 <% end %>
