!!!
%html
  %head
    %title
      = yield(:title)
      \- TablicAGH.pl
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag :application
    = javascript_include_tag :application
    = csrf_meta_tag
    = yield(:head)

  %body
    .black_mamba
    .topbar
      .fill
        .container
          =render :partial=> "layouts/top-bar"
    .container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}", :class=>"alert-message error"
      .row
        .span2
          #sidebar
            =yield :content_menu
            =render :partial=> "layouts/login-menu"
        .span14
          .content 
            - if show_title?
              %h2= yield(:title) 
            =yield :above 
            #content
              = yield
